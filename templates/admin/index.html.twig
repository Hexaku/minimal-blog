{% extends 'admin/base.html.twig' %}

{% block main %}
<div class="container mx-auto px-6 py-8">
    <div>
        <h3 class="text-3xl font-medium text-gray-700">Dashboard</h3>
        <div class="mt-4">
            <div class="flex flex-wrap -mx-6">
                <div class="w-full px-6 sm:w-1/2 xl:w-1/3">
                    <div class="flex items-center px-5 py-6 bg-white rounded-md shadow-sm">
                        <div class="p-4 bg-indigo-600 bg-opacity-75 rounded-full text-white">
                            <span><i class="fa-solid fa-users fa-xl"></i></span>
                        </div>
                        <div class="mx-5">
                            <h4 class="text-2xl font-semibold text-gray-700">{{ totalUsers }}</h4>
                            <div class="text-gray-500">Users</div>
                        </div>
                    </div>
                </div>
                <div class="w-full px-6 mt-6 sm:w-1/2 xl:w-1/3 sm:mt-0">
                    <div class="flex items-center px-5 py-6 bg-white rounded-md shadow-sm">
                        <div class="p-4 bg-blue-600 bg-opacity-75 rounded-full text-white">
                            <span><i class="fa-solid fa-file-lines fa-xl"></i></span>
                        </div>
                        <div class="mx-5">
                            <h4 class="text-2xl font-semibold text-gray-700">{{ totalPosts }}</h4>
                            <div class="text-gray-500">Posts</div>
                        </div>
                    </div>
                </div>
                <div class="w-full px-6 mt-6 sm:w-1/2 xl:w-1/3 xl:mt-0">
                    <div class="flex items-center px-5 py-6 bg-white rounded-md shadow-sm">
                        <div class="p-4 bg-pink-600 bg-opacity-75 rounded-full text-white">
                            <span><i class="fa-solid fa-tasks fa-xl"></i></span>
                        </div>
                        <div class="mx-5">
                            <h4 class="text-2xl font-semibold text-gray-700">{{ totalCategories }}</h4>
                            <div class="text-gray-500">Categories</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-8"></div>
    </div>
</div>
{% endblock %}