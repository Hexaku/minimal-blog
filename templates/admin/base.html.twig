{% set route_name = app.request.attributes.get('_route') %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js" integrity="sha256-xKeoJ50pzbUGkpQxDYHD7o7hxe0LaOGeguUidbq6vis=" crossorigin="anonymous"></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="bg-gray-800 font-sans leading-normal tracking-normal mt-12">

    <header>
        <!--Nav-->
        <nav aria-label="menu nav" class="bg-gray-800 pt-2 md:pt-1 pb-1 px-1 mt-0 h-auto fixed w-full z-20 top-0">
            <div class="flex flex-wrap items-center justify-between">
                <div class="flex flex-shrink md:w-1/3 justify-center md:justify-start text-white">
                    <a href="{{ path('admin_index') }}" aria-label="Home">
                        <span class="text-xl pl-2">Admin dashboard</span>
                    </a>
                </div>
                <div class="flex w-full pt-2 content-center justify-between md:w-1/3 md:justify-end">
                    <ul class="list-reset flex justify-between flex-1 md:flex-none items-center">
                        <li class="flex-1 md:flex-none md:mr-3">
                            <div class="relative inline-block">
                                <p class="text-white py-2 px-2">Hello Admin</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>

        <div class="flex flex-col md:flex-row">
            <nav aria-label="alternative nav">
                <div class="bg-gray-800 shadow-xl h-20 fixed bottom-0 mt-12 md:relative md:h-screen z-10 w-full md:w-48 content-center">

                    <div class="md:mt-12 md:w-48 md:fixed md:left-0 md:top-0 content-center md:content-start text-left justify-between">
                        <ul class="list-reset flex flex-row md:flex-col pt-3 md:py-3 px-1 md:px-2 text-center md:text-left">
                            <li class="mr-3 flex-1">
                                <a href="{{ path('admin_category_list') }}" class="block py-1 md:py-3 pl-1 align-middle text-white no-underline hover:text-white border-b-2 border-gray-800 hover:border-pink-500 {% if route_name starts with "admin_category" %} border-pink-500 {% endif %}">
                                    <i class="fas fa-tasks pr-0 md:pr-3 {% if route_name starts with "admin_category" %} text-pink-500 {% endif %}"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-gray-400 md:text-gray-200 block md:inline-block">Categories</span>
                                </a>
                            </li>
                            <li class="mr-3 flex-1">
                                <a href="{{ path('admin_post_list') }}" class="block py-1 md:py-3 pl-1 align-middle text-white no-underline hover:text-white border-b-2 border-gray-800 hover:border-purple-500 {% if route_name starts with "admin_post" %} border-purple-500 {% endif %}">
                                    <i class="fa-solid fa-file-lines pr-0 md:pr-3 {% if route_name starts with "admin_post" %} text-purple-500 {% endif %}"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-gray-400 md:text-gray-200 block md:inline-block">Posts</span>
                                </a>
                            </li>
                            <li class="mr-3 flex-1">
                                <a href="{{ path('admin_newsletter_list') }}" class="block py-1 md:py-3 pl-1 align-middle text-white no-underline hover:text-white border-b-2 border-gray-800 hover:border-blue-600 {% if route_name starts with "admin_newsletter" %} border-blue-600 {% endif %}">
                                    <i class="fa-solid fa-envelope md:pr-3 {% if route_name starts with "admin_newsletter" %} text-blue-600 {% endif %}"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-white md:text-white block md:inline-block">Newsletter</span>
                                </a>
                            </li>
                            <div class="my-4"></div>
                            <li class="mr-3 flex-1">
                                <a href="{{ path('app_home') }}" class="block py-1 md:py-3 pl-0 md:pl-1 align-middle text-white no-underline hover:text-white border-b-2 border-gray-800 hover:border-green-500">
                                    <i class="fa-solid fa-circle-arrow-left pr-0 md:pr-3"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-gray-400 md:text-gray-200 block md:inline-block">Minimal Blog</span>
                                </a>
                            </li>
                            <li class="mr-3 flex-1">
                                <a href="{{ path('app_logout') }}" class="block py-1 md:py-3 pl-0 md:pl-1 align-middle text-white no-underline hover:text-white border-b-2 border-gray-800 hover:border-red-500">
                                    <i class="fa-solid fa-right-from-bracket pr-0 md:pr-3"></i><span class="pb-1 md:pb-0 text-xs md:text-base text-gray-400 md:text-gray-200 block md:inline-block">Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>


                </div>
            </nav>
            <div id="main" class="main-content flex-1 bg-gray-100 mt-12 md:mt-2 pb-24 md:pb-5">
            {% block main %}
            {% endblock %}
            </div>
        </div>
    </main>
</html>