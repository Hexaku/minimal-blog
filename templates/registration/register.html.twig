{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<body class="bg-white font-sans leading-normal tracking-normal">

	<!--Nav-->
    {% include '_header.html.twig' %}
    <!--Nav-->

    <div class="text-center pt-16 md:pt-32 pb-16">
		<h1 class="font-bold break-normal text-3xl md:text-5xl">Wanna share your experiences ? Just register !</h1>
	</div>

    <div class="flex justify-center">
        {{ form_start(registrationForm, {'attr': {'class': 'w-full max-w-lg'}}) }}
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3 mb-6 md:mb-0">
                {{ form_label(registrationForm.email, null, {
                    'label': 'Email',
                    'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2', 'for': 'grid-email'}
                }) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:bg-white focus:border-gray-500', 'placeholder': 'example@minimal.com', 'id': 'grid-email'}}) }}
                {{ form_errors(registrationForm.email) }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                {{ form_label(registrationForm.plainPassword, null, {
                    'label': 'Password',
                    'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2', 'for': 'grid-password'}
                }) }}            
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:bg-white focus:border-gray-500', 'placeholder': '******************', 'id': 'grid-password'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    <button type="submit" class="w-full shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                        Register
                    </button>
                </div>
            </div>        
        {{ form_end(registrationForm) }}
    </div>

</body>
{% endblock %}


