{% extends 'base.html.twig' %}

{% block body %}
<body class="bg-white font-sans leading-normal tracking-normal">

	<!--Nav-->
    {% include '_header.html.twig' %}
    <!--Nav-->
	
	<!--Title-->
	<div class="text-center pt-16 md:pt-32 pb-16">
		<h1 class="font-bold break-normal text-3xl md:text-5xl">Hesitant ? Choose the category you like !</h1>
	</div>

    	<div class="bg-200">
	
		<div class="container w-full max-w-6xl mx-auto px-2 py-8">
			<div class="flex flex-wrap -mx-2">
                {% for key, category in categories %}
				<div class="w-full md:w-1/3 px-2 pb-12">
					<div class="bg-white rounded overflow-hidden shadow-md hover:shadow-lg relative smooth">
						<a href="{{ path('categories_show', {"slug": category.slug}) }}" class="no-underline hover:no-underline">
                            <img src="https://source.unsplash.com/collection/{{ key }}/400x200" class="h-full w-full rounded-t shadow-lg">
                            <div class="p-6 h-auto md:h-24">	
                                <div class="font-bold text-xl text-gray-900">{{ category.name }}</div>
                            </div>
						</a>
					</div>
				</div>
                {% endfor %}
			</div>
		</div>

    <!--Author-->
    {% include '_author.html.twig' %}
    <!--/Author-->

	</div>

    <!--Footer-->
    {% include '_footer.html.twig' %}
    <!--/Footer-->

</body>
{% endblock %}