<div class="flex justify-center">
    {{ form_start(categoryForm, {'attr': {'class': 'w-full max-w-lg'}}) }}
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
                {{ form_widget(categoryForm.name, {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:bg-white focus:border-gray-500', 'placeholder': 'Ny new category...'}}) }}
                <div class="text-red-600">{{ form_errors(categoryForm.name) }}</div>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
                <button type="submit" class="w-full shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                    {{ buttonLabel|default('Submit') }}
                </button>
            </div>
        </div>   
    {{ form_end(categoryForm) }}
</div>