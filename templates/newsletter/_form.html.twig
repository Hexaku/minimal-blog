<div class="flex justify-center">
    {{ form_start(newsletterForm, {'attr': {'class': 'w-full max-w-lg'}}) }}
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
                {{ form_label(newsletterForm.title, null, {
                    'label': 'Title',
                    'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2', 'for': 'title'}
                }) }}
                {{ form_widget(newsletterForm.title, {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:bg-white focus:border-gray-500', 'placeholder': 'My new newsletter...'}}) }}
                <div class="text-red-600">{{ form_errors(newsletterForm.title) }}</div>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
                {{ form_label(newsletterForm.content, null, {
                    'label': 'Content',
                    'label_attr': {'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2', 'for': 'content'}
                }) }}
                {{ form_widget(newsletterForm.content, {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:bg-white focus:border-gray-500', 'placeholder': 'What do you want to talk about ?'}}) }}
            <div class="text-red-600">{{ form_errors(newsletterForm.content) }}</div>
        </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3">
                <button type="submit" class="w-full shadow bg-green-500 hover:bg-green-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
                    {{ buttonLabel|default('Submit') }}
                </button>
            </div>
        </div>   
    {{ form_end(newsletterForm) }}
</div>